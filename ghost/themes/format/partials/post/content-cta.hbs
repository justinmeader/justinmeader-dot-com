<aside class="post-upgrade-cta container" id="post-upgrade-cta">
	{{#has visibility="paid"}}
		<h2>{{t "This post is for paying subscribers only"}}</h2>
	{{else has visibility="members"}}
		<h2>{{t "This post is for subscribers only"}}</h2>
	{{else has visibility="tiers"}}
		<h2>{{t "This post is for subscribers on the {tiers} only" tiers=(tiers prefix="" suffix="")}}</h2>
	{{/has}}

	<p>{{t "Become a member now and have access to all posts, enjoy exclusive content, and stay updated with constant updates."}}</p>

	{{#if @member}}
		<a class="button" href="{{#match (t "/membership/") "!=" "false"}}{{t "/membership/"}}{{else}}#/portal/account/plans{{/match}}">{{t "Upgrade your account"}}</a>
	{{else}}
		<a
			class="button"
			{{#match tiers}}
				{{#match (t "/membership/") "!=" "false"}}
					href="{{t "/membership/"}}"
				{{else}}
					href="#/portal/signup"
				{{/match}}
			{{else match (t "/signup/") "!=" "false"}}
				href="{{t "/signup/"}}"
			{{else}}
				href="#/portal/signup"
			{{/match}}
		>
			{{~t "Become a member"~}}
		</a>
		<p>{{t "Already have an account?"}} <a href="{{#match (t "/signin/") "!=" "false"}}{{t "/signin/"}}{{else}}#/portal/signin{{/match}}">{{t "Sign in"}}</a></p>
	{{/if}}
</aside>