{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{!-- Everything inside the #tag block pulls data from the page. --}}
{{#tag}}

	{{!-- Hero. --}}
	{{> "section/hero"
		title=name
		custom_excerpt=description
		count_posts=../pagination.total
		feature_image=false
	}}

	{{!-- Tags. --}}
	{{#> "get-tags" setting=@custom.tags_list_above_posts}}
		{{> "section/tags" hide_title=true slug=../slug style=@custom.tags_style}}
	{{/"get-tags"}}
{{/tag}}

{{!-- Posts. --}}
{{> "section/posts" title=(t "Posts tagged with {tag}" tag=tag.name) hide_title=true show_pagination=true style=@custom.posts_list_style}}

{{!-- Subscription. --}}
{{> "section/subscription"}}
